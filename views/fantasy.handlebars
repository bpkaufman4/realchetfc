<link rel="stylesheet" href="{{basepath}}styles/roster.css">
<link rel="stylesheet" href="{{basepath}}styles/fantasy.css">
<section class="container p-3">
  <div class="fantasy-header">
    <div class="line">
      <h1>Fantasy Chet - {{season.name}}</h1>
    </div>
  </div>

  {{#if isUpcomingSeason}}
  <!-- Create Team Button (all screen sizes) -->
  <div class="text-center mb-4">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFantasyEntryModal">
      Create Team
    </button>
  </div>
  {{/if}}

  {{#if fantasyRankings}}
  <!-- Mobile View -->
  <div class="d-flex flex-column gap-3 d-sm-none">
    {{#each fantasyRankings}}
    <div class="col-12 player-card h-auto fantasy-team-card" 
         style="cursor: pointer;" 
         data-bs-toggle="modal" 
         data-bs-target="#teamBreakdownModal"
         data-team-index="{{@index}}">
      <div class="p-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="d-flex align-items-center gap-3">
            <div class="number"
              style="position: static; width: auto; height: auto; padding: 8px 12px; font-size: 16px;">
              #{{rank}}
            </div>
            <div>
              <div class="font-2">{{teamName}}</div>
              <div class="font-1">{{firstName}} {{lastName}}</div>
            </div>
          </div>
          <div class="text-end">
            <div class="font-2">{{totalPoints}}</div>
            <div class="font-1">points</div>
          </div>
        </div>

        {{#if isOngoingSeason}}
        <div class="separator my-2"></div>
        <div class="font-1 mb-2"><strong>Players:</strong></div>
        <div class="d-flex flex-wrap gap-1">
          {{#each fantasyEntryPlayers}}
          <span class="badge bg-secondary">
            {{player.firstName}} {{player.lastName}} ({{player.totalPoints}} pts)
          </span>
          {{/each}}
        </div>
        {{#if ../lastGameBreakdown.omittedPlayer}}
        <div class="font-1 mt-2"><small class="text-muted">Last game omitted: {{../lastGameBreakdown.omittedPlayer.playerName}}</small></div>
        {{/if}}
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>

  <!-- Desktop View -->
  <div class="row d-none d-sm-flex">
    {{#each fantasyRankings}}
    <div class="col-6 col-md-4 col-lg-3 mb-4">
      <div class="player-card fantasy-team-card" 
           style="cursor: pointer;" 
           data-bs-toggle="modal" 
           data-bs-target="#teamBreakdownModal"
           data-team-index="{{@index}}">
        <div class="p-3 h-100 d-flex flex-column">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="number"
              style="position: static; width: auto; height: auto; padding: 6px 10px; font-size: 14px;">
              #{{rank}}
            </div>
            <div class="text-end">
              <div class="font-2">{{totalPoints}}</div>
              <div class="font-1" style="font-size: 12px;">points</div>
            </div>
          </div>

          <div class="font-2 mb-1">{{teamName}}</div>
          <div class="font-1 mb-2">{{firstName}} {{lastName}}</div>
          <div class="separator my-2"></div>

          {{#if ../isOngoingSeason}}
          <div class="font-1 mb-2" style="font-size: 12px;"><strong>Players:</strong></div>
          <div class="flex-grow-1">
            {{#each fantasyEntryPlayers}}
            <div class="font-1 mb-1" style="font-size: 11px;">
              {{player.firstName}} {{player.lastName}}
              <span class="text-muted">({{player.totalPoints}})</span>
            </div>
            {{/each}}
            {{#if ../lastGameBreakdown.omittedPlayer}}
            <div class="font-1 mt-1" style="font-size: 10px;">
              <small class="text-muted">Last game omitted: {{../lastGameBreakdown.omittedPlayer.playerName}}</small>
            </div>
            {{/if}}
          </div>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="text-center py-5">
    <h3 class="text-muted">No fantasy entries found for this season</h3>
    <p class="text-muted">Check back later or contact an administrator.</p>
  </div>
  {{/if}}
</section>

<!-- Team Breakdown Modal -->
<div class="modal fade" id="teamBreakdownModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="teamBreakdownModalTitle">Team Breakdown</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="teamBreakdownContent">
          <!-- Content will be populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>
</div>

{{#if isUpcomingSeason}}
<!-- Create Fantasy Entry Modal -->
<div class="modal fade" id="createFantasyEntryModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Team</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="fantasyEntryForm">
          <input type="hidden" id="seasonId" value="{{season.seasonId}}">
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="firstName" class="form-label">First Name:*</label>
              <input type="text" class="form-control" id="firstName" required>
            </div>
            <div class="col-md-6">
              <label for="lastName" class="form-label">Last Name:*</label>
              <input type="text" class="form-control" id="lastName" required>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col">
              <label for="teamName" class="form-label">Team Name:*</label>
              <input type="text" class="form-control" id="teamName" required>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Select Players:*</label>
            <div class="player-selection-counter" id="playerCounter">
              Players Selected: 0/6
            </div>
            <div class="row" id="playersGrid">
              {{#each availablePlayers}}
              <div class="col-6 col-md-4 col-lg-3 mb-3">
                <div class="player-selection-card" data-player-id="{{playerId}}" style="cursor: pointer;">
                  <div class="player-image-container">
                    {{#if image}}
                    <img src="{{../basepath}}{{image}}" alt="{{firstName}} {{lastName}}" class="player-image">
                    {{else}}
                    <div class="player-image-placeholder">
                      <i class="fas fa-user"></i>
                    </div>
                    {{/if}}
                    {{#if number}}
                    <div class="player-number">#{{number}}</div>
                    {{/if}}
                  </div>
                  <div class="player-info">
                    <div class="player-name">{{firstName}} {{lastName}}</div>
                    {{#if position}}
                    <div class="player-position">{{position.abbreviation}}</div>
                    {{/if}}
                  </div>
                  <div class="selection-indicator">
                    <i class="fas fa-check"></i>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
            <small class="form-text text-muted">Click on player cards to select them for your fantasy team. You must select exactly 6 players.</small>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveFantasyEntryBtn">Create Team</button>
      </div>
    </div>
  </div>
</div>
{{/if}}

<script>
  // Make basepath available to external script
  window.basepath = '{{basepath}}';
  
  // Make fantasy data available to the modal - available for all seasons
  {{#if fantasyRankings}}
  window.fantasyRankings = {{{json fantasyRankings}}};
  {{else}}
  window.fantasyRankings = [];
  {{/if}}
  
  // Debug logging
  console.log('Fantasy rankings loaded:', window.fantasyRankings);
  console.log('Number of teams:', window.fantasyRankings ? window.fantasyRankings.length : 'No data');
</script>
<script src="{{basepath}}javascript/fantasy.js"></script>